<h1>文章列表</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>標題</th>
      <th>內容</th>
      <th>作者</th>
      <th>留言數</th>
      <th colspan="3">管理</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.name %></td>
        <td><span class='badge'><%= post.comments_count %></span></td>
        <td><%= link_to '詳細', post, class: 'btn btn-xs btn-success' %>
        <%= link_to '修改', edit_post_path(post), class: 'btn btn-xs btn-warning' %>
        <%= link_to '刪除', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '文章新增', new_post_path, class: 'btn btn-lg btn-primary' %>
